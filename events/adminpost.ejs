<head>
    <style>
        /* Admin Page Styles */

.container {
  max-width: 800px;
  margin: 40px auto;
  padding: 20px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#images-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

#images-list li {
  margin-bottom: 20px;
  display: flex;
  align-items: center;
}

.image-preview {
  max-width: 100%;
  border-radius: 10px;
  margin-right: 20px;
}

.reaction-buttons {
  display: flex;
  justify-content: space-between;
}

.approve-button {
  background-color: #4CAF50;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.approve-button:hover {
  background-color: #3e8e41;
}

.deapprove-button {
  background-color: #ff0000;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.deapprove-button:hover {
  background-color: #cc0000;
}
    </style>
</head>


<h1>Admin Page</h1>

<div class="container">
  <ul id="images-list">
    <% images.forEach(image => { %>
      <li>
        <img src="<%= image %>" alt="Image" class="image-preview">
        <div class="reaction-buttons">
          <form action="/admin/react" method="post">
            <input type="hidden" name="image" value="<%= image %>">
            <button type="submit" name="reaction" value="✅" class="approve-button">Approve</button>
            <button type="submit" name="reaction" value="❌" class="deapprove-button">Deapprove</button>
          </form>
        </div>
      </li>
    <% }); %>
  </ul>
</div>
